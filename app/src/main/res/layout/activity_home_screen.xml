<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.dtran.plentyofdog.home_screen">

    <TextView
        android:text="@string/home"
        android:textStyle="bold"
        android:textSize="30dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView"
        android:textColor="#ff57adff"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/edit_profile"
        android:id="@+id/button1"
        android:layout_below="@+id/textView"
        android:textColor="#ff57adff"
        android:background="#fffff3a3"
        android:textSize="30sp"
        android:layout_marginTop="5dp"
        android:onClick="changeProfile"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/set_preferences"
        android:id="@+id/small"
        android:layout_below="@+id/button1"
        android:textColor="#ff57adff"
        android:background="#fffff3a3"
        android:textSize="30sp"
        android:onClick="setPreference"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_browsing"
        android:id="@+id/medium"
        android:layout_below="@+id/small"
        android:onClick="dogBrowse"
        android:textColor="#ff57adff"
        android:background="#fffff3a3"
        android:textSize="30sp"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/my_dogs"
        android:id="@+id/large"
        android:layout_below="@+id/medium"
        android:layout_centerHorizontal="true"
        android:onClick="myDogs"
        android:textColor="#ff57adff"
        android:background="#fffff3a3"
        android:textSize="30sp"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/check_matches"
        android:id="@+id/button5"
        android:layout_below="@+id/large"
        android:layout_centerHorizontal="true"
        android:textColor="#ff57adff"
        android:background="#fffff3a3"
        android:textSize="30sp"
        android:layout_marginTop="5dp" />


</RelativeLayout>
